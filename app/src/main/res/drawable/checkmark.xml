<?xml version="1.0" encoding="utf-8"?>
<!--https://stackoverflow.com/a/62875614/13289307-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="25dp"
        android:height="4dp"
        android:top="30dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/holo_green_dark"/>
            </shape>
        </rotate>
    </item>
    <item
        android:width="40dp"
        android:height="4dp"
        android:top="25dp"
        android:left="13dp">
        <rotate
            android:fromDegrees="-45">
            <shape
                android:shape="rectangle">
                <solid android:color="@android:color/holo_green_dark">
                </solid>
            </shape>
        </rotate>
    </item>
    <item
        android:width="50dp"
        android:height="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</layer-list>