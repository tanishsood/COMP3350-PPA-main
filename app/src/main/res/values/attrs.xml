<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProjectCard">
        <attr name="projectTitle" format="string" />
        <attr name="completedTasks" format="integer" />
        <attr name="totalTasks" format="integer" />
        <attr name="nextTask1" format="string" />
        <attr name="nextTask2" format="string" />
        <attr name="nextTask3" format="string" />
        <attr name="dueDate" format="string" />
    </declare-styleable>

    <declare-styleable name="TaskCard">
        <attr name="taskTitle" format="string" />
        <attr name="timeLimit" format="string" />
        <attr name="description" format="string" />
        <attr name="taskDueDate" format="string" />
    </declare-styleable>

    <declare-styleable name="GlobalTimerWidget">
        <attr name="isTest" format="boolean" />
        <attr name="hideOnStopped" format="boolean" />
    </declare-styleable>
</resources>